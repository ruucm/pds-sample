    "@react-three/fiber": "^7.0.21",
    "@types/node": "17.0.23",
    "@types/react": "18.0.1",
    "@types/react-dom": "18.0.0",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "autoprefixer": "^10.4.2",
