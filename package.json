    "classnames": "^2.3.1",
    "esbuild": "^0.14.34",
    "esbuild-plugin-glsl": "^1.1.0",
    "eslint": "^8.8.0",
    "eslint-config-next": "^12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "file-loader": "^6.2.0",
    "framer-motion": "^6.2.9",
    "fs-extra": "^10.0.1",
