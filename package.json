{
  "name": "pds-monorepo",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "package:pds": "lerna run --scope pds --stream serve",
    "package:website": "lerna run --scope website --stream dev",
    "package:tailwind": "tailwindcss -i tailwind.css -o ./packages/pds/src/tailwind-compiled.css --watch",
    "pds-build": "lerna run --scope pds --stream build",
    "pds-release": "lerna run --scope pds --stream release",
    "website-build": "lerna run --scope website --stream build",
    "start": "run-p --print-label package:*",
    "build": "lerna run --parallel build",
    "eslint": "eslint --fix \"./packages/pds/src/**/*.{js,jsx,ts,tsx}\" \"./packages/website/src/**/*.{js,jsx,ts,tsx}\"",
    "deploy": "cd packages/pds; yarn version; git push --tags; git push"
  },
  "dependencies": {
    "camera-controls": "^1.34.2",
    "glsl-halftone": "^1.0.4",
    "next": "12.1.4",
    "query-string": "^7.1.1",
    "react": "^18.0.0",
    "react-dom": "18.0.0"
  },
